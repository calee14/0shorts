{
  "name": "0Shorts Extension",
  "description": "No more distractions and endless scrolling.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "permissions": [
    "activeTab"
  ],
  "icons": {
      "16": "logo192.png",
      "48": "logo192.png",
      "128": "logo512.png"
    },
  "theme_color": "#000000",
  "background_color": "#ffffff",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["./static/js/content.js"]
    }
 ]
}

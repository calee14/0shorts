{
  "name": "0Shorts Extension",
  "description": "No more distractions and endless scrolling.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_title": "Mange filters"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "scripting"
  ],
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo512.png"
  },
  "host_permissions": [
    "<all_urls>"
  ]
}
